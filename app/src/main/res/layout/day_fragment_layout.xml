<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dayFragment"
    android:fillViewport="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkTextViewMeetings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_people"
            android:gravity="start"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="8dp"
            android:text="@string/meetings_string"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>


        <ListView
            android:id="@+id/dayMeetingsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

        </ListView>

        <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkTextViewToDo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_assignment_ind"
            android:gravity="start"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="8dp"
            android:text="@string/todo_string"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <ListView
            android:id="@+id/dayToDoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

        </ListView>

    </LinearLayout>

</ScrollView>