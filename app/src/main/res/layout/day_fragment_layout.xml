<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dayFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkTextViewMeetings"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_people"
            android:gravity="start"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="8dp"
            android:text="@string/meetings_string"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/dayMeetingsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkTextViewMeetings"
            >

        </ListView>

        <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkTextViewToDo"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_assignment_ind"
            android:gravity="start"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="8dp"
            android:text="@string/todo_string"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/dayMeetingsList"
            />

        <ListView
            android:id="@+id/dayToDoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkTextViewToDo"
            >

        </ListView>

    </RelativeLayout>



</ScrollView>